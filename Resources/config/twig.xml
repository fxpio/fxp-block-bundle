<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_block.twig.extension.base.class">Sonatra\Component\Block\Twig\Extension\BlockExtension</parameter>
        <parameter key="sonatra_block.twig.extension_translator.base.class">Sonatra\Component\Block\Twig\Extension\BlockTranslatorExtension</parameter>
        <parameter key="sonatra_block.twig.renderer.base.class">Sonatra\Component\Block\Twig\Block\TwigRenderer</parameter>
        <parameter key="sonatra_block.twig.engine.base.class">Sonatra\Component\Block\Twig\Block\TwigRendererEngine</parameter>
        <parameter key="sonatra_block.twig.resources" type="collection" />
    </parameters>

    <services>
        <service id="sonatra_block.twig.extension" class="%sonatra_block.twig.extension.base.class%" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="twig" />
            <argument type="service" id="sonatra_block.twig.renderer" />
            <argument type="service" id="sonatra_block.factory" />
            <argument type="service" id="sonatra_block.registry" />
            <argument type="collection" />
        </service>

        <service id="sonatra_block.twig.extension_translator" class="%sonatra_block.twig.extension_translator.base.class%" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="translator" />
        </service>

        <service id="sonatra_block.twig.renderer" class="%sonatra_block.twig.renderer.base.class%" public="false">
            <argument type="service" id="sonatra_block.twig.engine" />
        </service>

        <service id="sonatra_block.twig.engine" class="%sonatra_block.twig.engine.base.class%" public="false">
            <argument type="service" id="twig" />
            <argument>%sonatra_block.twig.resources%</argument>
        </service>
    </services>
</container>
