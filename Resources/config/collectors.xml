<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="data_collector.sonatra_block.class">Sonatra\Component\Block\Extension\DataCollector\BlockDataCollector</parameter>
        <parameter key="data_collector.sonatra_block.extractor.class">Sonatra\Component\Block\Extension\DataCollector\BlockDataExtractor</parameter>
    </parameters>

    <services>
        <service id="data_collector.sonatra_block.extractor" class="%data_collector.sonatra_block.extractor.class%" />

        <service id="data_collector.sonatra_block" class="%data_collector.sonatra_block.class%">
            <tag name="data_collector" template="@SonatraBlock/Collector/block.html.twig" id="sonatra_block" priority="255" />
            <argument type="service" id="data_collector.sonatra_block.extractor" />
        </service>
    </services>
</container>
