<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_block.extension.base.class">Sonatra\Component\Block\Extension\DependencyInjection\DependencyInjectionExtension</parameter>
        <parameter key="sonatra_block.factory.class">Sonatra\Component\Block\BlockFactory</parameter>
        <parameter key="sonatra_block.registry.class">Sonatra\Component\Block\BlockRegistry</parameter>
        <parameter key="sonatra_block.resolved_type_factory.class">Sonatra\Component\Block\ResolvedBlockTypeFactory</parameter>
        <parameter key="sonatra_block.type_guesser.validator.base.class">Sonatra\Component\Block\Extension\Validator\ValidatorTypeGuesser</parameter>
    </parameters>

    <services>
        <!-- DependencyInjectionExtension -->
        <service id="sonatra_block.extension" class="%sonatra_block.extension.base.class%" public="false">
            <property name="container" type="service" id="service_container" />
            <argument type="collection" />
            <argument type="collection" />
            <argument type="collection" />
        </service>

        <!-- BlockFactory -->
        <service id="sonatra_block.factory" class="%sonatra_block.factory.class%">
            <argument type="service" id="sonatra_block.registry" />
            <argument type="service" id="sonatra_block.resolved_type_factory" />
        </service>

        <!-- BlockRegistry -->
        <service id="sonatra_block.registry" class="%sonatra_block.registry.class%">
            <argument type="collection">
                <!--
                We don't need to be able to add more extensions.
                 * more types can be registered with the sonatra_block.type tag
                 * more type extensions can be registered with the sonatra_block.type_extension tag
                 * more type_guessers can be registered with the sonatra_block.type.type_guesser tag
                -->
                <argument type="service" id="sonatra_block.extension" />
            </argument>
            <argument type="service" id="sonatra_block.resolved_type_factory" />
        </service>

        <!-- ResolvedBlockTypeFactory -->
        <service id="sonatra_block.resolved_type_factory" class="%sonatra_block.resolved_type_factory.class%" />

        <!-- ValidatorTypeGuesser -->
        <service id="sonatra_block.type_guesser.validator" class="%sonatra_block.type_guesser.validator.base.class%">
            <tag name="sonatra_block.type_guesser" />
            <argument type="service" id="validator.mapping.class_metadata_factory" />
        </service>

        <!-- CoreExtension -->
        <service id="sonatra_block.type.block" class="Sonatra\Component\Block\Extension\Core\Type\BlockType">
            <argument type="service" id="property_accessor"/>
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.twig" class="Sonatra\Component\Block\Extension\Core\Type\TwigType">
            <tag name="sonatra_block.type" />
            <argument type="service" id="twig" />
        </service>
        <service id="sonatra_block.type.output" class="Sonatra\Component\Block\Extension\Core\Type\OutputType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.object" class="Sonatra\Component\Block\Extension\Core\Type\ObjectType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.field" class="Sonatra\Component\Block\Extension\Core\Type\FieldType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.text" class="Sonatra\Component\Block\Extension\Core\Type\TextType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.textarea" class="Sonatra\Component\Block\Extension\Core\Type\TextareaType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.password" class="Sonatra\Component\Block\Extension\Core\Type\PasswordType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.email" class="Sonatra\Component\Block\Extension\Core\Type\EmailType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.url" class="Sonatra\Component\Block\Extension\Core\Type\UrlType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.checkbox" class="Sonatra\Component\Block\Extension\Core\Type\CheckboxType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.radio" class="Sonatra\Component\Block\Extension\Core\Type\RadioType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.datetime" class="Sonatra\Component\Block\Extension\Core\Type\DateTimeType">
            <tag name="sonatra_block.type" template-alias="datetime" />
        </service>
        <service id="sonatra_block.type.date" class="Sonatra\Component\Block\Extension\Core\Type\DateType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.time" class="Sonatra\Component\Block\Extension\Core\Type\TimeType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.birthday" class="Sonatra\Component\Block\Extension\Core\Type\BirthdayType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.timezone" class="Sonatra\Component\Block\Extension\Core\Type\TimezoneType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.number" class="Sonatra\Component\Block\Extension\Core\Type\NumberType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.integer" class="Sonatra\Component\Block\Extension\Core\Type\IntegerType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.percent" class="Sonatra\Component\Block\Extension\Core\Type\PercentType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.money" class="Sonatra\Component\Block\Extension\Core\Type\MoneyType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.currency" class="Sonatra\Component\Block\Extension\Core\Type\CurrencyType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.choice" class="Sonatra\Component\Block\Extension\Core\Type\ChoiceType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.country" class="Sonatra\Component\Block\Extension\Core\Type\CountryType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.locale" class="Sonatra\Component\Block\Extension\Core\Type\LocaleType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.language" class="Sonatra\Component\Block\Extension\Core\Type\LanguageType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.collection" class="Sonatra\Component\Block\Extension\Core\Type\CollectionType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.repeated" class="Sonatra\Component\Block\Extension\Core\Type\RepeatedType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.hidden" class="Sonatra\Component\Block\Extension\Core\Type\HiddenType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.closure" class="Sonatra\Component\Block\Extension\Core\Type\ClosureType">
            <tag name="sonatra_block.type" />
        </service>
        <service id="sonatra_block.type.form" class="Sonatra\Component\Block\Extension\Core\Type\FormType">
            <tag name="sonatra_block.type" />
            <argument type="service" id="form.factory" />
        </service>
        <service id="sonatra_block.type.form_errors" class="Sonatra\Component\Block\Extension\Core\Type\FormFunctionType">
            <tag name="sonatra_block.type" />
            <argument>errors</argument>
        </service>
        <service id="sonatra_block.type.form_rest" class="Sonatra\Component\Block\Extension\Core\Type\FormFunctionType">
            <tag name="sonatra_block.type" />
            <argument>rest</argument>
        </service>
    </services>
</container>
