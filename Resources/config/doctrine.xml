<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_block.type_guesser.doctrine.base.class">Sonatra\Bundle\BlockBundle\Doctrine\Block\DoctrineOrmTypeGuesser</parameter>
    </parameters>

    <services>
        <service id="sonatra_block.type_guesser.doctrine" class="%sonatra_block.type_guesser.doctrine.base.class%">
            <tag name="sonatra_block.type_guesser" />
            <argument type="service" id="doctrine" />
        </service>

        <service id="sonatra_block.type.entity" class="Sonatra\Bundle\BlockBundle\Doctrine\Block\Type\EntityType">
            <tag name="sonatra_block.type" />
            <argument type="service" id="doctrine" />
        </service>
    </services>
</container>
